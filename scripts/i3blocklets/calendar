#!/usr/bin/env bash

# originally from:
# https://github.com/vivien/i3blocks-contrib/blob/master/calendar/calendar

# requires:
# - yad
# - xdotool (for the positioning of the popup)

WIDTH=${WIDTH:-200}
HEIGHT=${HEIGHT:-200}
DATEFMT=${DATEFMT:-"+%a %d.%m.%Y %H:%M:%S"}
SHORTFMT=${SHORTFMT:-"+%H:%M:%S"}

POPUP_POSX=${POPUP_POSX:--5}
POPUP_POSY=${POPUP_POSY:--69}

case "$BLOCK_BUTTON" in
1 | 2 | 3)
	pgrep -x 'yad' >/dev/null && pkill 'yad' || i3-msg -q \
		"exec yad --calendar \
    --width=$WIDTH --height=$HEIGHT \
	--undecorated --fixed \
	--close-on-unfocus --no-buttons \
	--posx=$POPUP_POSX --posy=$POPUP_POSY \
	> /dev/null"
	;;
esac
echo "$(date "$DATEFMT") "
echo "$(date "$SHORTFMT") "

# vim: ft=sh
