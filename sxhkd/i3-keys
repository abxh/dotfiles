# setup i3 keybindings with shxkd.

# kill windows
super + shift + q
	[ "$(xdotool getactivewindow getwindowname)" = "stalonetray" ] || i3-msg -q kill

# reload config file / restart i3 inplace
super + shift + {c, r}
	i3-msg -q {reload, restart}

# change focus / move focused window
super + {_, shift} + {h, j, k, l}
	i3-msg -q {focus, move} {left, down, up, right}

# change focus between tiling / floating window
super + space
	i3-msg -q focus mode_toggle

# select parent
super + a
	i3-msg -q focus parent

# split window
super + {b, v}
	i3-msg -q split {horizontal, vertical}

# toggle fullscreen / floating
super + shift + {f, space}
	i3-msg -q {fullscreen, floating} toggle

# switch to workspace / move focused container to workspace
super + {_,shift} + {1-9,0}
	i3-msg -q {_, move container to } workspace number {1-9,10}

# vim: ft=sxhkd
