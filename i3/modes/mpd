set $mpd "<span foreground='#282828' background='#d4be98'> mpd </span> t: toggle, s:stop, n: previous, m: next"

mode --pango_markup $mpd {
        bindsym t exec --no-startup-id mpc toggle
        bindsym s exec --no-startup-id mpc stop
        bindsym n exec --no-startup-id mpc next
        bindsym m exec --no-startup-id mpc prev

        bindsym Ctrl+c mode "default"
        bindsym $mod+m mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+m mode $mpd

# vim: ft=i3config
