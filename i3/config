include ~/.config/i3/modes/*
include ~/desktop/setup/modes/*
include ~/.config/i3/bar*

# colors: {{{
set $colorp #d4be98
set $colorf #282828
set $coloru #ea6962
set $bar_bg #00000000

# border colors:
# class                 border    backgr.   text      indicator child_border
client.focused          $colorpCC $colorpCC #ffffff   #ffffffCC $colorpCC
client.focused_inactive $colorf   $colorf   #ffffff   #ffffffCC $colorf
client.unfocused        $colorf   $colorf   #888888   #ffffffCC $colorf
# }}}

# keys: {{{

# windows key as $mod
set $mod Mod4

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# only initiate a tiling drag when the modifier is held:
tiling_drag modifier

# }}}

# borders and gaps: {{{

default_border pixel
default_border pixel 1

gaps inner 7
gaps top -3
gaps bottom -5

# smart_borders on
smart_gaps on
hide_edge_borders vertical

# }}}

# other options: {{{

# font for window titles and bars:
font pango:JetBrainsMono NF 12

workspace_auto_back_and_forth yes

# }}}

# startup: {{{

exec_always --no-startup-id hsetroot -extend $(xdg-user-dir PICTURES)/wallpapers/wallhaven-j5p23m.jpg
exec_always --no-startup-id ~/.config/sxhkd/sxhkd_restart

exec --no-startup-id picom
exec --no-startup-id redshift -l $(cat ~/.redshift-coord)

exec --no-startup-id xset s 600 600 dpms 0 0 660
exec --no-startup-id xss-lock -- ~/.scripts/i3lock_launch
exec --no-startup-id caffeine

exec --no-startup-id udiskie --no-automount --no-notify --tray
exec --no-startup-id nm-applet
exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1

exec --no-startup-id alacritty --title='todo' -e ~/.scripts/todo

# }}}

# window rules: {{{

set $fwin_medium floating enable move position 30 ppt 20 ppt resize set 40 ppt 60 ppt
set $fwin_big floating enable move position 10 ppt 10 ppt resize set 80 ppt 80 ppt
set $fwin_widget floating enable sticky enable move position 69 ppt 55 ppt resize set 30 ppt 40 ppt

for_window [class="Lxappearance"] $fwin_medium
for_window [class="Pavucontrol"] $fwin_medium
for_window [class="Arandr"] $fwin_medium
for_window [class="Nm-connection-editor"] $fwin_medium
# for_window [class="todo"] $fwin_widget
for_window [title="Open Folder"] $fwin_big

# }}}

# vim: ft=i3config fdm=marker
