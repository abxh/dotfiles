# vim: filetype=i3config

bar {
	id "bar_top"

	position top
	binding_mode_indicator no
	i3bar_command i3bar --transparency
	status_command SCRIPT_DIR=~/.scripts/i3blocklets i3blocks -c ~/.config/i3blocks/top
	tray_padding 3

	colors {
		background $bar_bg
		statusline $colorw

		# <colorclass>     <border>  <background> <text>
		focused_workspace  $bar_bg   $colorw    $colorb
		active_workspace   $bar_bg   $colorw    $colorw
		inactive_workspace $bar_bg   $bar_bg    $colorw
		urgent_workspace   $bar_bg   $bar_bg    $coloru
}}
