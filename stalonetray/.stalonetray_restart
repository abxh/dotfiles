#!/usr/bin/env bash

pkill -x "stalonetray"
stalonetray &

# don't focus stalonetray by setting xorg override_redirect flag.
# https://unix.stackexchange.com/a/680848

(sleep 0.2; # wait for i3 to restart completly
wid=$(xdotool search --class stalonetray);
xdotool set_window --overrideredirect 1 "$wid";
xdotool windowunmap "$wid";
xdotool windowmap "$wid" &)
